{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",    // <-- Cambiado para que solo mire dentro de src
    "src/**/*.tsx"   // <-- Cambiado para que solo mire dentro de src
  ],
  "exclude": [
    "node_modules",
    "android",       // <-- AGREGADO: Ignora la carpeta de Capacitor/Android
    "out"            // <-- AGREGADO: Ignora exportaciones estÃ¡ticas
  ]
}
